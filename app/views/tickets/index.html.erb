<style>
#tickets_page {
    width: 90%;
    min-width: 500px;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 30px;
    border: outset;
    padding-left: 50px;
    padding-bottom: 15px;
    padding-top: 25px;
    border-radius: 20px;
}

table {
  width: 90%;
}

table th{
  border-bottom: double;
}

tbody td{
  padding: 0 30px;
}

.num-tickets {
  text-align: center;
}

#caption1{
  margin-left: 5%;
}
</style>

<p id="caption1">Your booked tickets are listed by event time.</p>

<div id="tickets_page">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Event type</th>
      <th>Date</th>
      <th>Time</th>
      <th>Venue</th>
      <th>Number of tickets booked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <% if ticket.user_id == current_user.id %>
        <tr>
          <% event = Event.find(ticket.event_id) %>
          <td><%= event.title %></td>
          <td><%= event.event_type %></td>
          <td><%= event.date %></td>
          <td><%= event.time %></td>
          <td><%= event.venue %></td>
          <td><%= ticket.num_booked %></td>
          <td><%= link_to 'Show', ticket %></td>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Ticket', new_ticket_path %>

</div>

<br>
<br>

<p>Want more new and exciting events? <%= link_to 'View now.', events_path %></p>
